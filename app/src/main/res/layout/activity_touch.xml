<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/pikoder_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:alpha="0.3"
        android:contentDescription="@+id/app_name"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/pikoder_logo" />

    <RelativeLayout
        android:id="@+id/canvasLayout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/pikoder_logo"
        android:layout_below="@id/trim_right"
        android:layout_above="@id/pikoder_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </RelativeLayout>

<!--
    <RelativeLayout
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/canvasLayout"
        android:layout_toStartOf="@+id/textView5">
    </RelativeLayout>
-->
    <Button
        android:id="@+id/buttonCH7On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CH7"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView"
        android:layout_above="@+id/textView3" />

    <Button
        android:id="@+id/buttonAUTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTO"
        android:layout_above="@+id/buttonLEARNING"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/buttonLEARNING" />

    <Button
        android:id="@+id/buttonLEARNING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEARNING"
        android:layout_above="@+id/buttonMANUAL"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonMANUAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANUAL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/buttonLEARNING" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:background="#555A6E"
        android:gravity="center"
        android:text="Aux Channels"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAUTO"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/buttonAUTO"
        android:background="#555A6E"
        android:gravity="center"
        android:text="Flight Mode Selection"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/trim_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trim_right"
        android:layout_toLeftOf="@id/trim_right"
        android:contentDescription="@+id/app_name"
        android:src="@drawable/arrow_button_left_43x43" />

    <ImageButton
        android:id="@+id/trim_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginEnd="116dp"
        android:contentDescription="@+id/app_name"
        android:src="@drawable/arrow_button_right_43x43" />

    <ImageButton
        android:id="@+id/trim_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trim_left"
        android:layout_below="@+id/trim_left"
        android:contentDescription="@+id/app_name"
        android:src="@drawable/arrow_button_down_43x43" />

    <ImageButton
        android:id="@+id/trim_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trim_right"
        android:layout_below="@+id/trim_right"
        android:contentDescription="@+id/app_name"
        android:src="@drawable/arrow_button_up_43x43" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/trim_right"
        android:layout_alignStart="@+id/trim_left"
        android:background="#555A6E"
        android:gravity="center"
        android:text="Trim"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>



